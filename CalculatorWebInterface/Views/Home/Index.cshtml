@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Index", "Home", "Post"))
{
    <input type="number" name="firstArgument" value="0"/><br/>
    <input type="number" name="secondArgument" value="0" /><br />
    <select name="operation">
        @for (int i = 0; i < ViewBag.operations.Count; i++)
        {
            <option value="@ViewBag.operations[i].Value"> @ViewBag.operations[i].Text </option>
        }
    </select>
    <input type="submit" value="Вычислить"/>
}

<p>
    @ViewBag.Result
</p>